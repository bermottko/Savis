<div class="container mt-5">
  <div class="row justify-content-center mb-5">

    <!-- Barra de pesquisa + botão de cadastro -->
    <div class="d-flex justify-content-center align-items-center mb-4" style="gap: 10px; width: 100%;">
      <input 
        type="search" 
        id="pesquisa" 
        placeholder="Pesquisar motorista por nome ou CPF" 
        class="form-control pesquisa-custom"
      >
      <a href="/auth/cadastro-motorista" class="botao-cadastro">Cadastrar Motorista</a>
    </div>

    <!-- Lista de motoristas -->
    <div id="listaMotoristas" class="col-12">
     <% posts.forEach(function(post) { %>
        <div class="col-12 d-flex justify-content-center mb-2">
          <div class="card p-3 shadow-sm card-viagem" style="width: 100%; max-width: 720px; background-color: #d1e3fd;">
            <div class="d-flex flex-row align-items-center">
              <img 
                src="<%= post.img ? '/uploads/' + post.img : '/assets/default-profile.jpg' %>" 
                alt="Foto de perfil" 
                class="foto-perfil me-3"
              >
              <div class="flex-grow-1">
                <h5 class="nome-perfil mb-0"><%= post.nome %></h5>
              </div>
              <button class="botao ver-mais-btn">Ver mais</button>
            </div>

            <!--DETALHES DO MOTORISTA-->
            <div class="detalhes">
              <p><strong>Matrícula: </strong><%= post.matricula%></p>
            <hr>
            <p><strong>Data de Nascimento: </strong><%= post.data_nasc.split('-').reverse().join('/') %></p>
              <hr>
              <p><strong>CPF: </strong><span class="cpf-perfil"><%= post.CPF.replace(/^(\d{3})(\d{3})(\d{3})(\d{2})$/, "$1.$2.$3-$4") %></span></p>
              <hr>
              <p><strong>Gênero: </strong> <%= post.genero.descricao %></p>
              <hr>
              <p><strong>Email: </strong> <%= post.email %></p>
              <hr>
              <p><strong>Telefone: </strong> <%= post.fone.replace(/^(\d{2})(\d{5})(\d{4})$/, "($1) $2-$3") %></p>
              <hr>
              <p><strong>Endereço: </strong>
                <%= post.endereco?.rua || '' %>, 
                <%= post.endereco?.numero || '' %> - 
                <%= post.endereco?.bairro || '' %> - 
                <%= post.endereco?.cidade || '' %> 
                (<%= post.endereco?.UF || '' %>) 
                CEP: <%= post.endereco?.CEP ? post.endereco.CEP.replace(/^(\d{5})(\d{3})$/, "$1-$2") : '' %>
              </p>
              <hr>
              
              <p class="mb-2"><strong>Documentos:</strong></p>
              <div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
                <% const documentos = [
                  { campo: 'carteira_trab', label: 'Carteira de Trabalho' },
                  { campo: 'cursos', label: 'Cursos' },
                  { campo: 'habilitacao', label: 'Habilitação' },
                  { campo: 'comprov_resid', label: 'Comprovante de Residência' },
                  { campo: 'comprov_escola', label: 'Comprovante Escolar' },
                  { campo: 'titulo_eleitor', label: 'Título de Eleitor' },
                  { campo: 'ant_crim', label: 'Antecedentes Criminais' },
                  { campo: 'exame_tox', label: 'Exame Toxicológico' },
                ]; %>

                <% documentos.forEach(doc => { %>
                  <div class="col">
                    <div class="d-flex justify-content-between align-items-center border px-3 py-2 bg-white">
                      <span style="font-size: 14px;"><%= doc.label %>:</span>
                      <% if (post.documento?.[doc.campo]) { %>
                        <a href="/uploads/<%= post.documento[doc.campo] %>" target="_blank" class="botao-visualizar bg-visualizar-docs">Visualizar</a>
                      <% } else { %>
                        <span class="text-muted" style="font-size: 13px;">Não enviado</span>
                      <% } %>
                    </div>
                  </div>
                <% }); %>
              </div>

              <div class="d-flex justify-content-end gap-3">
                <a href="/admin/motoristas/editar/<%= post.cod %>" class="botao">Editar</a>
                <form action="/admin/motoristas/deletar/<%= post.cod %>?_method=DELETE" method="POST">
                  <button type="submit" class="botao bg-vermelho" onclick="return confirm('Tem certeza que deseja deletar este motorista?')">Excluir</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- PAGINAÇÃO -->
    <% if (totalPaginas > 1) { %>
      <div class="col-12 mt-4 d-flex justify-content-center" id="paginacaoWrapper">
        <div id="paginacaoContainer">
          <button 
            class="botao-paginacao" 
            onclick="window.location.href='?page=<%= paginaAtual - 1 %>'" 
            <%= paginaAtual === 1 ? 'disabled' : '' %>>
            «
          </button>

          <% for (let i = 1; i <= totalPaginas; i++) { %>
            <button 
              class="botao-paginacao <%= i === paginaAtual ? 'ativo' : '' %>" 
              onclick="window.location.href='?page=<%= i %>'">
              <%= i %>
            </button>
          <% } %>

          <button 
            class="botao-paginacao" 
            onclick="window.location.href='?page=<%= paginaAtual + 1 %>'" 
            <%= paginaAtual === totalPaginas ? 'disabled' : '' %>>
            »
          </button>
        </div>
      </div>
    <% } %>

  </div>
</div>

<script>
  const inputPesquisa = document.getElementById('pesquisa');
  const listaMotoristas = document.getElementById('listaMotoristas');
  const paginacaoWrapper = document.getElementById('paginacaoWrapper');

  function ativarVerMais() {
    document.querySelectorAll('.ver-mais-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const card = this.closest('.card');
        const detalhes = card.querySelector('.detalhes');
        const estaExpandido = detalhes.classList.contains('expandido');
        if (estaExpandido) {
          detalhes.style.height = '0px';
          detalhes.style.marginTop = '0';
          detalhes.classList.remove('expandido');
          this.textContent = 'Ver mais';
        } else {
          detalhes.style.height = detalhes.scrollHeight + 'px';
          detalhes.style.marginTop = '16px';
          detalhes.classList.add('expandido');
          this.textContent = 'Ver menos';
        }
      });
    });
  }

  // Ativa ver mais/ver menos na página inicial
  ativarVerMais();

  // Pesquisa live
  inputPesquisa.addEventListener('input', async function() {
    const termo = this.value.trim();

    if (!termo) {
      window.location.href = '/admin/motoristas/index';
      return;
    }

    try {
      const res = await fetch(`/admin/motoristas/pesquisar?q=${encodeURIComponent(termo)}`);
      const motoristas = await res.json();
      listaMotoristas.innerHTML = '';

      motoristas.forEach(post => {
        const card = document.createElement('div');
        card.classList.add('col-12', 'd-flex', 'justify-content-center', 'mb-2');
        card.innerHTML = `
          <div class="card p-3 shadow-sm card-viagem">
            <div class="d-flex flex-row align-items-center">
              <img src="${post.img ? '/uploads/' + post.img : '/assets/default-profile.jpg'}" class="foto-perfil me-3">
              <div class="flex-grow-1">
                <h5 class="nome-perfil mb-0">${post.nome}</h5>
              </div>
              <button class="botao ver-mais-btn">Ver mais</button>
            </div>
            <div class="detalhes">
              <p><strong>Data de Nascimento: </strong>${post.data_nasc.split('-').reverse().join('/')}</p>
              <hr>
              <p><strong>CPF: </strong>${post.CPF.replace(/^(\d{3})(\d{3})(\d{3})(\d{2})$/, "$1.$2.$3-$4")}</p>
              <hr>
              <p><strong>Gênero: </strong>${post.genero.descricao}</p>
              <hr>
              <p><strong>Email: </strong>${post.email}</p>
              <hr>
              <p><strong>Telefone: </strong>${post.fone.replace(/^(\d{2})(\d{5})(\d{4})$/, "($1) $2-$3")}</p>
              <hr>
              <p><strong>Endereço: </strong>
                ${post.endereco?.rua || ''}, 
                ${post.endereco?.numero || ''} - 
                ${post.endereco?.bairro || ''} - 
                ${post.endereco?.cidade || ''} 
                (${post.endereco?.UF || ''}) 
                CEP: ${post.endereco?.CEP ? post.endereco.CEP.replace(/^(\d{5})(\d{3})$/, "$1-$2") : '' }
              </p>
              <hr>
              <p class="mb-2"><strong>Documentos:</strong></p>
              <div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
                ${['carteira_trab','cursos','habilitacao','comprov_resid','comprov_escola','titulo_eleitor','ant_crim','exame_tox'].map(campo => {
                  const labelMap = {
                    carteira_trab: 'Carteira de Trabalho',
                    cursos: 'Cursos',
                    habilitacao: 'Habilitação',
                    comprov_resid: 'Comprovante de Residência',
                    comprov_escola: 'Comprovante Escolar',
                    titulo_eleitor: 'Título de Eleitor',
                    ant_crim: 'Antecedentes Criminais',
                    exame_tox: 'Exame Toxicológico'
                  };
                  return `<div class="col">
                            <div class="d-flex justify-content-between align-items-center border px-3 py-2 bg-white">
                              <span style="font-size:14px;">${labelMap[campo]}:</span>
                              ${post.documento?.[campo] ? 
                                `<a href="/uploads/${post.documento[campo]}" target="_blank" class="botao-visualizar bg-visualizar-docs">Visualizar</a>` :
                                `<span class="text-muted" style="font-size:13px;">Não enviado</span>`}
                            </div>
                          </div>`;
                }).join('')}
              </div>
              <div class="d-flex justify-content-end gap-3">
                <a href="/admin/motoristas/editar/${post.cod}" class="botao">Editar</a>
                <form action="/admin/motoristas/deletar/${post.cod}?_method=DELETE" method="POST">
                  <button type="submit" class="botao bg-vermelho" onclick="return confirm('Tem certeza que deseja deletar este motorista?')">Excluir</button>
                </form>
              </div>
            </div>
          </div>
        `;
        listaMotoristas.appendChild(card);
      });

      // Esconde paginação durante pesquisa
      paginacaoWrapper.style.display = 'none';

      // Reativa ver mais/ver menos
      ativarVerMais();

    } catch (erro) {
      console.error("Erro na pesquisa live:", erro);
    }
  });
</script>