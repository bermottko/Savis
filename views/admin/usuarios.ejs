<div class="container mt-4">
  <div class="row justify-content-center">
    <% posts.forEach(function(post) { %>
      <div class="col-12 d-flex justify-content-center mb-3">
        <div class="card d-flex flex-row align-items-center p-3 shadow-sm"
             style="width: 100%; max-width: 700px; background-color: #d1e3fd;">
          <img 
            src="<%= post.img ? '/uploads/' + post.img : '/assets/default-profile.jpg' %>" 
            alt="Foto de perfil" 
            class="me-3 border shadow-sm" 
            style="width: 60px; height: 60px; object-fit: cover; border-radius: 10px;">
          <div class="flex-grow-1">
            <h5 class="mb-0" style="font-size: 16px; font-weight: bold;"><%= post.nome %></h5>
          </div>
          <button class="botao">Ver mais</button>
        </div>
      </div>
    <% }) %>
  </div>
</div>
